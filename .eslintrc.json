{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules" : true
    },
    "sourceType" : "module"
  },
  "globals": {
    "jQuery": true
  },
  "plugins": [
  ],
  "rules": {
    "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "only-multiline",
        "imports": "always-multiline",
        "exports": "only-multiline",
        "functions": "ignore"
    }],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-console": 0
  },
  "root": true
}